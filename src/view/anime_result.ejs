<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Anime</title>
    <%- include('./partials/css.ejs') %>
    <link rel="stylesheet" href="/css/result_pages/anime_result.css" />
  </head>
  <body>
    <%- include('./partials/navbar.ejs') %> <% animes.forEach(anime => { %>
    <div class="row" id="grid-items">
      <div class="col-lg-3">
        <h4 style="text-align: center"><%= anime.title %></h4>
        <img src="<%=anime.image_url%>" class="poster" />
      </div>
      <div class="col-lg-9">
        <p style="font-size: 20px"><%= anime.synopsis%></p>
        <br />
        <h5><span style="color:green">Start Date</span>: <%= anime.start_date%></h5>
        <h5><span style="color:red">End Date </span>: <%= anime.end_date%></h5>
        <h5>Rating: <span style="color:red"><%= anime.rated%></span></h5>
        <h5>For more informations,visit the link down below⬇︎⬇︎</h5>
        <p style="color:blue"><%= anime.url %></p>
      </div>
    </div>
    <% })%> <%- include("./partials/footer.ejs") %> <%-
    include('./partials/jQuery.ejs') %>
  </body>
</html>
